{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2020",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["api/**/*.ts", "lib/**/*.ts", "lib/**/*.tsx", "consts.ts", "components/Cover.tsx"],
  "exclude": ["node_modules"]
}
